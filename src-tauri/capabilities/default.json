{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/uv",
          "sidecar": true,
          "args": [
            "run",
            {
              "validator": ".*/paperqa_server\\.py"
            }
          ]
        }
      ]
    },
    "shell:allow-open",
    "shell:allow-kill",
    "dialog:default",
    "core:path:default",
    "store:default"
  ]
}